@model List<Blog>

<div class="container-fluid p-4">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title1</th>
                <th scope="col">Description1</th>
                <th scope="col">Title2</th>
                <th scope="col">Description2</th>
                <th scope="col">Author</th>
                <th scope="col">Category</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr class="align-middle">
                    <th scope="row">@blog.Id</th>
                    <td>@blog.Title1</td>
                    <td>@blog.Description1</td>
                    <td>@blog.Title2</td>
                    <td>@blog.Description2</td>
                    <td>@blog.Author?.Name @blog.Author?.Surname</td>
                    <td>@blog.Category?.Name</td>
                    <td>
                        <img style="width:50px;height:50px;border-radius:50%;object-fit:cover" src="~/admin/images/blogs/@blog.Image" alt="bg"
                             data-bs-toggle="modal" data-bs-target="#imageModal-@blog.Id" />
                    </td>
                    <td>
                        <a asp-action="update" asp-controller="blog" asp-route-id="@blog.Id" class="text-warning">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="delete" asp-controller="blog" asp-route-id="@blog.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
                <div class="modal fade" id="imageModal-@blog.Id" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="imageModalLabel">Author Picture</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body m-auto" style="width:400px;height:400px;">
                                <img style="width:100%;height:100%;object-fit:cover;" src="~/admin/images/blogs/@blog.Image" class="img-fluid" alt="bg" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
    <a asp-action="add" asp-controller="blog" class="btn btn-primary w-100">Add</a>
</div>