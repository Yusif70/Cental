@model Cental.Models.Service

<div class="container-fluid pt-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input type="text" value="@Model.Title" class="form-control border-1 border-secondary" placeholder="xxxxxxx" asp-for="Title">
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title" class="text-danger-small text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" value="@Model.Description" class="form-control border-1 border-secondary" placeholder="xxx" asp-for="Description">
            <label asp-for="Description">Description</label>
            <span asp-validation-for="Description" class="text-danger-small text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Select an icon</label>
            <div class="form-check">
                <input type="radio" asp-for="Icon" value="fa fa-phone-alt" checked />
                <i class="fa fa-phone-alt"></i>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Icon" value="fa fa-money-bill-alt" />
                <i class="fa fa-money-bill-alt"></i>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Icon" value="fa fa-road" />
                <i class="fa fa-road"></i>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Icon" value="fa fa-umbrella" />
                <i class="fa fa-umbrella"></i>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Icon" value="fa fa-building" />
                <i class="fa fa-building"></i>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Icon" value="fa fa-car-alt" />
                <i class="fa fa-car-alt"></i>
            </div>
        </div>
        <a asp-action="index" asp-controller="service" type="button" class="btn btn-secondary text-danger float-end m-2">Cancel</a>
        <button type="submit" class="btn btn-primary float-end mt-2">Save</button>
    </form>
</div>
