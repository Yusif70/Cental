@model Cental.Models.Author

<div class="container-fluid pt-4">
    <form method="post" enctype="multipart/form-data">
        <div class="form-floating mb-3">
            <input type="text" asp-for="Name" class="form-control border-1 border-secondary">
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name" class="text-danger-small text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="Surname" class="form-control border-1 border-secondary">
            <label asp-for="Surname">Surname</label>
            <span asp-validation-for="Surname" class="text-danger-small text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="File" class="form-label">
                Image
            </label>
            <input type="file" asp-for="File" class="form-control" />
        </div>
        <a asp-action="index" asp-controller="author" type="button" class="btn btn-secondary text-danger float-end m-2">Cancel</a>
        <button type="submit" class="btn btn-primary float-end mt-2">Save</button>
    </form>
</div>