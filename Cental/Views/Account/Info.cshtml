@model AppUser

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">User Info</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-primary">User Info</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form>
                <div asp-validation-summary="ModelOnly" class="text text-danger small"></div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Name" disabled class="form-control" placeholder="xxx">
                    <label asp-for="Name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Surname" disabled class="form-control" placeholder="xxx">
                    <label asp-for="Surname">Surname</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Email" disabled class="form-control" placeholder="xxx">
                    <label asp-for="Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="UserName" disabled class="form-control" placeholder="xxx">
                    <label asp-for="UserName">User name</label>
                </div>
                <a asp-action="update" asp-controller="account" class="btn btn-primary btn-lg btn-block w-100">Update</a>
            </form>
        </div>
    </div>
</div>
