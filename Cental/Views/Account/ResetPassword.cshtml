@model ResetPasswordModel
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Reset Password</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-primary">Reset Password</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text text-danger small"></div>
                <div class="form-floating mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="xxx">
                    <label asp-for="Password">New password</label>
                    <span asp-validation-for="Password" class="text text-danger small"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="xxx">
                    <label asp-for="ConfirmPassword">Confirm password</label>
                    <span asp-validation-for="ConfirmPassword" class="text text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block w-100">Save changes</button>
            </form>
        </div>
    </div>
</div>
